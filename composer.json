{
    "name": "contiva/sap-cpi-php",
    "type": "library",
    "description": "Implementation of SAP CPI APIs in PHP",
    "keywords": [
        "sap btp",
        "sap cpi",
        "sap",
        "sap integration suite"
    ],
    "homepage": "https://github.com/contiva/sap-cpi-php",
    "license": "MIT",
    "require": {
        "php": "^7.2 || ^8.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "contiva\\sapcpiphp\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Robert Fels",
            "email": "robert.fels@contiva.com",
            "homepage": "https://contiva.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9",
        "marcocesarato/php-conventional-changelog": "^1.15"
    },
    "scripts": {
        "changelog": "conventional-changelog",
        "release": "conventional-changelog --commit",
        "release:patch": "conventional-changelog --patch --commit",
        "release:minor": "conventional-changelog --minor --commit",
        "release:major": "conventional-changelog --major --commit"
    },
    "version": "1.0.1"
}